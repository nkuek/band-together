extends layout

include utils

block content
    +validationErrorSummary(errors)
    form(action='/user/register' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +textField('Username', 'userName', user.userName)
        +textField('Email', 'email', user.email)
        +textField('Password', 'password', user.password)
        +textField('Confirm Password', 'confirmedPassword', user.confirmedPassword)
        div(class='register-buttons')
            button(type='submit' class='register-submit') Register
            a(href='/' class='register-cancel') Cancel
    div
    p: a(href='/user/login') Already have an account?
