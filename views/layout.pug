doctype html
html
  head
      block head
        title="Band-Together"
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    nav(class='navbar')
      a(class='navbar-home' href='/') Band Together
      div(class="search-container")
        form(action="/" method="post")
          input(type="text" placeholder="Search.." name='search')
          button(type="submit" class="search-button")
            img(src="/Magnify-glass.png" class="to-big")
      ul
        li(class='navbar-elements'): a(class='nav-link' href='/songposts/new') + Create Song Post
      if locals.authenticated
        span(class='login-logout')

          a(class='user-profile' href=`/users/${locals.user.username}/`) #{locals.user.username} |

          form(class='logout-form' action='/users/logout' method='post')
            button(class='logout-button' type='submit')  Logout
      else
        span(class='login-logout')
          a(class='user-login' href='/users/login') Login |
          a(class='user-register' href='/users/register')  Register
  block content
